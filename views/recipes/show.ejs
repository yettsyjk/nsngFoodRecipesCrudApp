    <body>
    <header>
        <h1>Recipes Show.ejs Page for <%= recipe.name %></h1>
        <nav>
            <ul>
                <li>
                    <a href="/">Home</a>
                    </li>
                    <li>
                    <a href="/recipes">Recipes Index</a>
                    </li>
                    </ul>
                </nav>
    </header>
    <main>
        <section>
        <h2>Name: <%= recipe.name %></h2>
        <h3>Articles:</h3>
        <ul>
        <% for(let i =0; i< articles.length; i++) {%>
        <li><a href="/articles/<%= articles[i]._id %>"><%= articles[i].title %></a></li>
        <% } %>
        </ul>
        </section>

        
        <section> 
        <a href ="/recipes/<%= recipe._id %>/edit">Edit</a>
   </section>
   <form action="/recipes/<%= recipe._id %>?_method=DELETE" method="POST">
   <input type="submit" value="Delete Recipe"/>
   </form>
   </section>
    </main>
    
    </body>
