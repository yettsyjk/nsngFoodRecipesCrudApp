<%#JavaScript & jQuery Links%>
    <script src="https://ajax.googleapis.com/ajax/libs/jquery/3.2.1/jquery.min.js"></script>
    <script src="https://code.jquery.com/jquery-3.4.1.min.js" integrity="sha256-CSXorXvZcTkaix6Yvo6HppcZGetbYMGWSFlBw8HfCJo=" crossorigin="anonymous"></script>
	<script src="/server.js"></script>
    
</head>
    <body>
     <%#Background Image %>
        <style> body { 
          background-image: url("https://images.unsplash.com/photo-1560155016-bd4879ae8f21?ixlib=rb-1.2.1&ixid=eyJhcHBfaWQiOjEyMDd9&auto=format&fit=crop&w=1900&q=80");
          background-repeat: no-repeat;
          }
          </style>
    <header><h1>Edit <%= recipe.title %>'s Info</h1>
        <nav>
          <ul>
           <li>
           <a href="/recipes">Recipes Index</a>
        </li>
        <%#logout option%>
            <%if(alert!== undefined){%>
                <p><%=alert%></p>
            <%}%>    
            <% if(logged){ %>
            <li><a href="/user/logout">Logout</a></li>
            <% } %>
            <%#logout option%>
    </ul>
    </nav>
     </header>
     <main>
         <h2>Recipe Details:</h2>
         <form action="/recipes/<%= recipe.title %>?_method=PUT" method="POST">
        
        <label>Title: </label><br>
        <input type="text" name="title" value="<%= recipe.title %>"/><br/>

        <label>Description: </label><br>
        <input type="text" name="description" value="<%= recipe.description %>"/><br/>

        <label>Ingredients: </label><br>
        <input type="text" name="ingredients" value="<%= recipe.ingredients %>"/><br/>
        
        <input type="submit" value="Update Recipe"/>
        </form>
 </main>
    </body>
</html>