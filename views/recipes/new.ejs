     <main>
 
     <%#form%>
       <form action="/recipes" method="POST">
       
     <div class="form-group">
       <label for="recipe">Recipe title:</label><br>
       <input type="text" class="form-control" id="newRecipe" name="title" aria-describedby="nameHelp" placeholder="Recipe Title" autocomplete="off" required/>
</div>

       <div class="form-group">
       <label for="name">Author name:</label><br>
       <input type="text" id="name" name="author" aria-describedby="nameHelp" placeholder="Author Name" autocomplete="off" required/>
</div>

<div class="form-group">
       <label for="description">Recipe description:</label><br>
       <input type="text" id="name" name="description" aria-describedby="nameHelp" placeholder="Recipe Description" autocomplete="off" required/>
       </div>

<div class="form-group">
       <label for="ingredients">Recipe ingredients:</label><br>
       <input type="text" id="name" name="ingredients" aria-describedby="nameHelp" placeholder="Recipe Ingredients" autocomplete="off" required/>
</div>
       <input type="submit" value="Create Recipe"/>
       
        </form>
